{
  "name": "autoplay shield-study extension",
  "description": "collect user behavior for our blocking autoplay policy.",
  "version": "2.0.0",
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "autoplay-shield-study@shield.mozilla.org",
      "strict_min_version": "61.0a1"
    }
  },
  "default_locale": "en-US",
  "experiment_apis": {
    "introductionNotificationBar": {
      "schema": "./privileged/introductionNotificationBar/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/introductionNotificationBar/api.js",
        "paths": [["introductionNotificationBar"]]
      }
    },
    "study": {
      "schema": "./privileged/study/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/study/api.js",
        "paths": [["study"]]
      }
    },
    "testingOverrides": {
      "schema": "./privileged/testingOverrides/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/testingOverrides/api.js",
        "paths": [["testingOverrides"]]
      }
    },
    "autoplay": {
      "schema": "./privileged/autoplay/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/autoplay/api.js",
        "paths": [["autoplay"]]
      }
    }
  },
  "permissions": ["management", "storage", "alarms", "tabs"],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["blockedAutoplayDetector.js"]
    }
  ],
  "background": {
    "scripts": ["studySetup.js", "feature.js", "background.js"]
  },
  "icons": {
    "48": "icons/shield-icon.svg"
  }
}
